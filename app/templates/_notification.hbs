<li class="{{notification.type}}">
    <span>
        {{#if notification.status}}
            <i class="mdi-av-loop"></i>
        {{else}}
            <i class="mdi-action-done"></i>
        {{/if}}
    </span>
    <span>
        {{notification.text}}
    </span>
    <span class="dismiss">
        {{#if notification.status}}
        {{else}}
            <i class="mdi-content-clear" {{action "removeNotification" notification target="controllers.notifications"}}></i>
        {{/if}}
    </span>
    <span class="timestamp">
        {{ago notification.timestamp}}
    </span>
</li>