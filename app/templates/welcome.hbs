<div class="container">
    <div class="row">
        <div class="col s10 m4 offset-m4">
            <div class="card card-account">
                <div class="card-image">
                    <img src="images/clouds-1.jpg">
                </div>
                <div class="card-content">
                    <span class="card-title grey-text text-darken-4">Storage Account</span>
                    <div class="row">
                        <div class="col s12">
                            <select>
                                <option value="" disabled selected>Choose your option</option>
                                <option value="1">Option 1</option>
                                <option value="2">Option 2</option>
                                <option value="3">Option 3</option>
                            </select>
                        </div>
                        {{#if addNewUi}}
                            <div class="input-field col s12">
                                <i class="mdi-action-account-circle prefix"></i>
                                <input id="icon_prefix" type="text" class="validate">
                                <label for="icon_prefix">First Name</label>
                            </div>
                            <div class="input-field col s12">
                                <i class="mdi-communication-phone prefix"></i>
                                <input id="icon_telephone" type="tel" class="validate">
                                <label for="icon_telephone">Telephone</label>
                            </div>
                        {{else}}
                            <div class="col s12">
                                <a class="waves-effect waves-light btn blue darken-1"><i class="mdi-file-cloud left"></i>Add New Account</a>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>